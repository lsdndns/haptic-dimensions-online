var timeline = [];

var welcome = {
  type: 'html-button-response',
  stimulus: '<p>Welcome to the memory task.</p><p>Press start when you are ready.</p>',
  choices: ['Start']
};
timeline.push(welcome);

var trial = {
  type: 'html-button-response',
  stimulus: '<p>Remember this word:</p><h2>APPLE</h2>',
  choices: ['Continue']
};
timeline.push(trial);

var end = {
  type: 'html-button-response',
  stimulus: '<p>Thank you for participating!</p>',
  choices: ['Finish']
};
timeline.push(end);

jsPsych.init({
  timeline: timeline,
  on_finish: function() {
    jsPsych.data.displayData(); // shows data for testing
  }
});

